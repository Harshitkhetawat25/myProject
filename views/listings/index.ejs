<% layout("layouts/boilerplate.ejs") %> 
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem;
        overflow-x: auto;
        white-space: nowrap;
    }
    .filter {
        text-align: center;
        margin: 0.5rem;
        opacity: 0.7;
        flex: 0 0 auto;
        transition: opacity 0.3s, color 0.3s;
    }
    .filter:hover {
        opacity: 1;
        cursor: pointer;
        color: #fe424d;
    }
    .filter p {
        font-size: 0.8rem;
        margin: 0.2rem 0;
    }
    .filter i {
        font-size: 1.2rem;
    }
    .tax-info {
        display: none;
    }
    .tax-toggle {
        border: 1px solid #fe424d;
        border-radius: 1rem;
        height: 3rem;
        padding: 0.5rem;
        display: flex;
        align-items: center;
        flex: 0 0 auto;
        color: #fe424d;
    }
    .active-filter {
        opacity: 1;
        font-weight: bold;
        color: #fe424d;
    }
    .filter a {
        text-decoration: none;
        color: inherit;
    }
    .search-results {
        margin: 1rem 0;
        font-size: 1.1rem;
        color: #333;
    }
    #filter-toggle {
        display: none;
        background-color: #fe424d;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        margin: 0.5rem;
        cursor: pointer;
    }
    .listing-card {
        position: relative;
        transition: transform 0.3s;
        margin-bottom: 1.5rem;
    }
    .listing-card:hover {
        transform: translateY(-5px);
    }
    .booked-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(255, 0, 0, 0.8);
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 0.8rem;
        z-index: 10;
    }
    .card-img-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 50%);
        opacity: 0.7;
        transition: opacity 0.3s;
    }
    .listing-card:hover .card-img-overlay {
        opacity: 0.5;
    }
    .card-body {
        position: relative;
        z-index: 5;
        color: white;
    }
    .listing-link {
        text-decoration: none;
        color: inherit;
    }
    @media (max-width: 767.98px) {
        #filters {
            display: none;
            justify-content: flex-start;
            padding: 0.5rem;
        }
        #filters.show {
            display: flex;
        }
        .filter {
            margin: 0.3rem;
        }
        .filter i {
            font-size: 1rem;
        }
        .filter p {
            font-size: 0.7rem;
        }
        .tax-toggle {
            height: 2.5rem;
            padding: 0.3rem;
            font-size: 0.8rem;
        }
        #filter-toggle {
            display: block;
        }
    }
</style>

<body>
    <% if (query) { %>
        <div class="search-results">
            <h5>Search results for "<%= query %>"</h5>
        </div>
    <% } %>

    <button id="filter-toggle" onclick="toggleFilters()">Show Filters</button>
    <div id="filters">
        <div class="filter <%= !activeCategory ? 'active-filter' : '' %>">
            <a href="/listings"><i class="fa-solid fa-list"></i></a>
            <p>All</p>
        </div>
        <div class="filter <%= activeCategory === 'Trending' ? 'active-filter' : '' %>">
            <a href="/listings/category/Trending"><i class="fa-solid fa-fire"></i></a>
            <p>Trending</p>
        </div>
        <div class="filter <%= activeCategory === 'Rooms' ? 'active-filter' : '' %>">
            <a href="/listings/category/Rooms"><i class="fa-solid fa-bed"></i></a>
            <p>Rooms</p>
        </div>
        <div class="filter <%= activeCategory === 'Iconic cities' ? 'active-filter' : '' %>">
            <a href="/listings/category/Iconic cities"><i class="fa-solid fa-mountain-city"></i></a>
            <p>Iconic cities</p>
        </div>
        <div class="filter <%= activeCategory === 'Mountains' ? 'active-filter' : '' %>">
            <a href="/listings/category/Mountains"><i class="fa-solid fa-mountain-sun"></i></a>
            <p>Mountains</p>
        </div>
        <div class="filter <%= activeCategory === 'Castles' ? 'active-filter' : '' %>">
            <a href="/listings/category/Castles"><i class="fa-brands fa-fort-awesome"></i></a>
            <p>Castles</p>
        </div>
        <div class="filter <%= activeCategory === 'Amazing Pools' ? 'active-filter' : '' %>">
            <a href="/listings/category/Amazing Pools"><i class="fa-solid fa-person-swimming"></i></a>
            <p>Amazing Pools</p>
        </div>
        <div class="filter <%= activeCategory === 'Camping' ? 'active-filter' : '' %>">
            <a href="/listings/category/Camping"><i class="fa-solid fa-campground"></i></a>
            <p>Camping</p>
        </div>
        <div class="filter <%= activeCategory === 'Farms' ? 'active-filter' : '' %>">
            <a href="/listings/category/Farms"><i class="fa-solid fa-tractor"></i></a>
            <p>Farms</p>
        </div>
        <div class="filter <%= activeCategory === 'Arctic' ? 'active-filter' : '' %>">
            <a href="/listings/category/Arctic"><i class="fa-solid fa-snowflake"></i></a>
            <p>Arctic</p>
        </div>
        <div class="filter <%= activeCategory === 'Boats' ? 'active-filter' : '' %>">
            <a href="/listings/category/Boats"><i class="fa-solid fa-ship"></i></a>
            <p>Boats</p>
        </div>
        <div class="filter <%= activeCategory === 'Domes' ? 'active-filter' : '' %>">
            <a href="/listings/category/Domes"><i class="fa-solid fa-igloo"></i></a>
            <p>Domes</p>
        </div>
        <div class="tax-toggle">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% if (allListings.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info">No listings found matching your search.</div>
            </div>
        <% } else { %>
            <% for(let listing of allListings){ %>
                <div class="col mb-4">
                    <a href="/listings/<%=listing._id%>" class="listing-link">
                        <div class="card listing-card h-100">
                            <% if(listing.isBooked) { %>
                                <div class="booked-badge">Booked</div>
                            <% } %>
                            <img src="<%= listing.image.url || 'https://via.placeholder.com/300' %>" class="card-img-top" alt="listing_image" style="height: 200px; object-fit: cover;">
                            <div class="card-img-overlay"></div>
                            <div class="card-body">
                                <h5 class="card-title"><%= listing.title %></h5>
                                <p class="card-text">
                                    <i class="fas fa-map-marker-alt"></i> <%= listing.location %>, <%= listing.country %>
                                </p>
                                <p class="card-text">
                                    <strong>â‚¹<%= listing.price.toLocaleString("en-IN") %></strong> / night
                                    <i class="tax-info"> +18% GST</i>
                                </p>
                                <% if(listing.isBooked && currUser && listing.owner._id.equals(currUser._id)) { %>
                                    <span class="badge bg-info">Booked by Others</span>
                                <% } %>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        <% } %>
    </div>
</body>

<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
            info.style.display = info.style.display !== "inline" ? "inline" : "none";
        }
    });

    function toggleFilters() {
        const filters = document.getElementById("filters");
        filters.classList.toggle("show");
        const toggleButton = document.getElementById("filter-toggle");
        toggleButton.textContent = filters.classList.contains("show") ? "Hide Filters" : "Show Filters";
    }
</script>