<% layout("layouts/boilerplate.ejs") %>
<script>
    const mapToken = "<%=process.env.MAP_TOKEN%>";
    const listing = <%-JSON.stringify(listing) %>;
</script>

<!-- Hero Section -->
<div class="listing-hero">
    <div class="container-fluid px-0">
        <div class="hero-image-container">
            <img src="<%=listing.image.url%>" class="hero-image" alt="<%=listing.title%>">
            <div class="hero-overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="hero-content">
                                <h1 class="hero-title"><%=listing.title%></h1>
                                <div class="hero-meta">
                                    <span class="location-badge">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <%=listing.location%>, <%=listing.country%>
                                    </span>
                                    <span class="price-badge">
                                        ₹<%=listing.price.toLocaleString("en-IN")%> <small>per night</small>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container my-5">
    <div class="row">
        <!-- Left Column - Property Details -->
        <div class="col-lg-8">
            <!-- Property Overview -->
            <div class="property-section mb-5">
                <div class="section-header">
                    <h2>About this place</h2>
                    <div class="host-info">
                        <div class="host-avatar">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <div class="host-details">
                            <span class="host-label">Hosted by</span>
                            <span class="host-name"><%=listing.owner.username%></span>
                        </div>
                    </div>
                </div>
                <p class="property-description"><%=listing.description%></p>
            </div>

            <!-- Booking Status Alert -->
            <% if(listing.isBooked) { %>
            <div class="alert alert-warning booking-alert mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Currently Unavailable</strong> - This property is booked for the selected dates
            </div>
            <% } %>

            <!-- Owner Actions -->
            <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="owner-actions mb-5">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Your Listing</h5>
                        <div class="btn-group" role="group">
                            <a href="/listings/<%=listing._id%>/edit" class="btn btn-outline-primary">
                                <i class="fas fa-edit me-2"></i>Edit Listing
                            </a>
                            <form action="/listings/<%=listing._id%>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
                                    <i class="fas fa-trash me-2"></i>Delete Listing
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Reviews Section -->
            <div class="reviews-section">
                <% if(currUser && !listing.owner._id.equals(currUser._id)){ %>
                <div class="review-form-container mb-5">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h4 class="card-title">Share your experience</h4>
                            <form action="/listings/<%=listing._id%>/reviews" method="POST" class="needs-validation" novalidate>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="rating" class="form-label">Rating</label>
                                        <fieldset class="starability-slot">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="comment" class="form-label">Your Review</label>
                                    <textarea name="review[comment]" id="comment" rows="4" class="form-control" placeholder="Share your experience with future guests..." required></textarea>
                                    <div class="invalid-feedback">Please add your review comments</div>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Review
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Reviews Display -->
                <% if(listing.reviews.length > 0) { %>
                <div class="reviews-display">
                    <h3 class="section-title">Guest Reviews <span class="review-count">(<%=listing.reviews.length%>)</span></h3>
                    <div class="reviews-grid">
                        <% for (review of listing.reviews) { %>
                        <div class="review-card">
                            <div class="review-header">
                                <div class="reviewer-info">
                                    <div class="reviewer-avatar">
                                        <i class="fas fa-user-circle"></i>
                                    </div>
                                    <div class="reviewer-details">
                                        <h6 class="reviewer-name"><%=review.author.username%></h6>
                                        <div class="review-rating">
                                            <p class="starability-result" data-rating="<%=review.rating%>"></p>
                                        </div>
                                    </div>
                                </div>
                                <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                <form action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST" class="delete-review-form">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete your review?')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                                <% } %>
                            </div>
                            <p class="review-comment"><%=review.comment%></p>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Location Section -->
            <div class="location-section mt-5">
                <h3 class="section-title">Location</h3>
                <div class="map-container">
                    <div id="map" class="property-map"></div>
                </div>
                <p class="location-description mt-3">
                    <i class="fas fa-map-marker-alt me-2"></i>
                    <%=listing.location%>, <%=listing.country%>
                </p>
            </div>
        </div>

        <!-- Right Column - Booking Widget -->
        <div class="col-lg-4">
            <div class="booking-widget-sticky">
                <div class="booking-widget">
                    <div class="widget-header">
                        <div class="price-display">
                            <span class="price">₹<%=listing.price.toLocaleString("en-IN")%></span>
                            <span class="price-unit">per night</span>
                        </div>
                    </div>

                    <% if(listing.isBooked) { %>
                    <div class="booking-unavailable">
                        <div class="unavailable-content">
                            <i class="fas fa-calendar-times"></i>
                            <h5>Currently Unavailable</h5>
                            <p>This property is booked</p>
                        </div>
                    </div>
                    <% } else if(currUser && !listing.owner._id.equals(currUser._id)) { %>
                    <button class="btn btn-primary btn-lg w-100 book-btn" data-bs-toggle="modal" data-bs-target="#bookingModal">
                        <i class="fas fa-calendar-check me-2"></i>Reserve Now
                    </button>
                    <% } else if(!currUser) { %>
                    <a href="/login" class="btn btn-primary btn-lg w-100 book-btn">
                        <i class="fas fa-sign-in-alt me-2"></i>Login to Book
                    </a>
                    <% } else { %>
                    <div class="owner-notice">
                        <i class="fas fa-home me-2"></i>
                        <span>This is your listing</span>
                    </div>
                    <% } %>

                    <div class="widget-footer">
                        <p class="booking-note">
                            <i class="fas fa-shield-alt me-2"></i>
                            Your payment information is protected
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Enhanced Booking Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header border-0">
                <div class="modal-title-section">
                    <h4 class="modal-title" id="bookingModalLabel">Reserve <%=listing.title%></h4>
                    <p class="modal-subtitle">Complete your booking details</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="bookingForm" action="/listings/<%=listing._id%>/bookings" method="POST">
                <div class="modal-body">
                    <div class="booking-form-content">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="checkIn" class="form-label">Check-in</label>
                                <input type="date" class="form-control form-control-lg" id="checkIn" name="booking[checkIn]" required min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="checkOut" class="form-label">Check-out</label>
                                <input type="date" class="form-control form-control-lg" id="checkOut" name="booking[checkOut]" required>
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="guests" class="form-label">Guests</label>
                            <select class="form-select form-select-lg" id="guests" name="booking[guests]" required>
                                <option value="">Select number of guests</option>
                                <option value="1">1 guest</option>
                                <option value="2">2 guests</option>
                                <option value="3">3 guests</option>
                                <option value="4">4 guests</option>
                                <option value="5">5 guests</option>
                                <option value="6">6+ guests</option>
                            </select>
                        </div>
                        
                        <div class="booking-summary">
                            <div class="summary-header">
                                <h5>Booking Summary</h5>
                            </div>
                            <div class="summary-details">
                                <div class="summary-row">
                                    <span>Duration:</span>
                                    <span id="nightsCount">Select dates</span>
                                </div>
                                <div class="summary-row">
                                    <span>Rate per night:</span>
                                    <span>₹<%=listing.price.toLocaleString("en-IN")%></span>
                                </div>
                                <hr>
                                <div class="summary-row total-row">
                                    <strong>Total: <span id="totalPrice">₹0</span></strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-credit-card me-2"></i>Confirm Booking
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

