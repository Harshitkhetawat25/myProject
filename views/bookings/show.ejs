<% layout("layouts/boilerplate.ejs") %>

<div class="confirmation-container">
    <!-- Success Header -->
    <div class="confirmation-header">
        <div class="container">
            <div class="success-indicator">
                <div class="success-icon">
                    <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22,4 12,14.01 9,11.01"/>
                    </svg>
                </div>
                <div class="success-content">
                    <h1>Booking Confirmed!</h1>
                    <p>Your reservation has been successfully processed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="confirmation-content">
            <!-- Booking Summary Card -->
            <div class="booking-summary-card">
                <div class="card-header-custom">
                    <h2>Booking Summary</h2>
                    <div class="booking-id">
                        <span class="id-label">Booking ID</span>
                        <span class="id-value">#<%= booking._id.toString().slice(-8).toUpperCase() %></span>
                    </div>
                </div>

                <div class="card-content">
                    <div class="booking-meta">
                        <div class="meta-item">
                            <div class="meta-icon">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                    <line x1="16" y1="2" x2="16" y2="6"/>
                                    <line x1="8" y1="2" x2="8" y2="6"/>
                                    <line x1="3" y1="10" x2="21" y2="10"/>
                                </svg>
                            </div>
                            <div class="meta-content">
                                <span class="meta-label">Booked on</span>
                                <span class="meta-value"><%= new Date(booking.bookingDate).toLocaleDateString('en-US', { 
                                    weekday: 'long',
                                    year: 'numeric', 
                                    month: 'long', 
                                    day: 'numeric' 
                                }) %></span>
                            </div>
                        </div>
                    </div>

                    <!-- Property Section -->
                    <div class="section">
                        <h3 class="section-title">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                                <polyline points="9,22 9,12 15,12 15,22"/>
                            </svg>
                            Property Details
                        </h3>
                        <div class="property-card">
                            <div class="property-header">
                                <h4 class="property-title"><%= booking.listing.title %></h4>
                                <div class="property-price">₹<%= booking.listing.price.toLocaleString('en-IN') %><span>/night</span></div>
                            </div>
                            <div class="property-location">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                                    <circle cx="12" cy="10" r="3"/>
                                </svg>
                                <%= booking.listing.location %>, <%= booking.listing.country %>
                            </div>
                        </div>
                    </div>

                    <!-- Stay Details Section -->
                    <div class="section">
                        <h3 class="section-title">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                <line x1="16" y1="2" x2="16" y2="6"/>
                                <line x1="8" y1="2" x2="8" y2="6"/>
                                <line x1="3" y1="10" x2="21" y2="10"/>
                            </svg>
                            Stay Details
                        </h3>
                        <div class="stay-details-grid">
                            <div class="detail-group">
                                <div class="detail-item">
                                    <span class="detail-label">Check-in</span>
                                    <span class="detail-value"><%= new Date(booking.checkIn).toLocaleDateString('en-US', { 
                                        month: 'short', 
                                        day: 'numeric', 
                                        year: 'numeric' 
                                    }) %></span>
                                    <span class="detail-day"><%= new Date(booking.checkIn).toLocaleDateString('en-US', { weekday: 'long' }) %></span>
                                </div>
                                <div class="detail-separator">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="9,18 15,12 9,6"/>
                                    </svg>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Check-out</span>
                                    <span class="detail-value"><%= new Date(booking.checkOut).toLocaleDateString('en-US', { 
                                        month: 'short', 
                                        day: 'numeric', 
                                        year: 'numeric' 
                                    }) %></span>
                                    <span class="detail-day"><%= new Date(booking.checkOut).toLocaleDateString('en-US', { weekday: 'long' }) %></span>
                                </div>
                            </div>
                            
                            <div class="guests-info">
                                <div class="guests-icon">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                                        <circle cx="12" cy="7" r="4"/>
                                    </svg>
                                </div>
                                <div>
                                    <span class="detail-label">Guests</span>
                                    <span class="detail-value"><%= booking.guests %> <%= booking.guests === 1 ? 'guest' : 'guests' %></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payment Summary -->
                    <div class="section payment-section">
                        <h3 class="section-title">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
                                <line x1="1" y1="10" x2="23" y2="10"/>
                            </svg>
                            Payment Summary
                        </h3>
                        <div class="payment-breakdown">
                            <div class="payment-row">
                                <span>₹<%= booking.listing.price.toLocaleString('en-IN') %> × <%= Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24)) %> nights</span>
                                <span>₹<%= (booking.listing.price * Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24))).toLocaleString('en-IN') %></span>
                            </div>
                            <div class="payment-row">
                                <span>Service fee</span>
                                <span>₹<%= Math.round(booking.totalPrice * 0.1).toLocaleString('en-IN') %></span>
                            </div>
                            <div class="payment-row">
                                <span>Taxes</span>
                                <span>₹<%= Math.round(booking.totalPrice * 0.05).toLocaleString('en-IN') %></span>
                            </div>
                        </div>
                        <div class="payment-total">
                                <span>Total Amount Paid</span>
                                            <% 
                                                let displayPrice = 0;
                                                if (booking.totalPrice && typeof booking.totalPrice === 'number') {
                                                    displayPrice = booking.totalPrice;
                                                } else if (booking.listing && booking.listing.price && booking.checkIn && booking.checkOut && booking.guests) {
                                                    // Fallback calculation if totalPrice is missing
                                                    const nights = Math.ceil((new Date(booking.checkOut) - new Date(booking.checkIn)) / (1000 * 60 * 60 * 24));
                                                    displayPrice = booking.listing.price * nights * booking.guests;
                                                }
                                             %>
                                <span class="total-amount">₹<%= displayPrice.toLocaleString('en-IN') %></span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="action-buttons">
                        <a href="/bookings/<%= booking._id %>/download" class="btn-primary">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                                <polyline points="7,10 12,15 17,10"/>
                                <line x1="12" y1="15" x2="12" y2="3"/>
                            </svg>
                            Download Invoice
                        </a>
                        <a href="/listings/<%= booking.listing._id %>" class="btn-secondary">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <polyline points="15,18 9,12 15,6"/>
                            </svg>
                            Back to Property
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

